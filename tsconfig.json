{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "rootDirs": ["./", "./packages/components"],
    "paths": {
      "@/*": [
        "packages/components/src/*"
      ]
    },
    "types": ["vite/client"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["packages/components/src/**/*.ts", "packages/components/src/**/*.d.ts", "packages/components/src/**/*.tsx", "packages/components/src/**/*.vue"]
}
